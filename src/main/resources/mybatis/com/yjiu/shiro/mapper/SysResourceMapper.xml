<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yjiu.shiro.mapper.SysResourceMapper">

    <!-- 开启二级缓存
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yjiu.shiro.pojo.SysResource">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="type" property="type" />
        <result column="url" property="url" />
        <result column="parent_id" property="parentId" />
        <result column="permission" property="permission" />
        <result column="available" property="available" />
        <result column="open" property="open" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id AS id, name AS name, type AS type, url AS url, parent_id AS parentId, permission AS permission, available AS available, open AS open
    </sql>

</mapper>
